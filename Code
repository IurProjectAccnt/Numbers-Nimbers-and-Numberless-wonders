#include <iostream>
#include <string>
using namespace std;
int main()
{
	bool cell[10][10];
	string name1, name2;
	int x1, y1,x2,y2,i;
	int j = 0;
	cout << "Players , tell me your names!" << endl;
	cin >> name1 >> name2;
	for (i = 0;i <10; ++i)
	{
		for (j = i; j < 10; ++j)
		{
			cell[i][j] = true;
		}
	}
	for (i = 1; i < 9; ++i)
	{
		for (j = i; j < 9; ++i)
		{
			cell[i][j] = false;
		}
	}

	for (i = 0; i < 33; ++i)
	{
		j = 0;
		if (i % 2 == 1)
		{
			cout << "Now it's " << name1<<"'s turn"<<endl;
		}
		else
		{
			cout << "Now it's " << name2<<"'s turn"<<endl;
		}
		cin >> x1 >> y1>>x2>>y2;
		cell[x1][y1] = true;
		cell [x2][y2] = true;
		for (int k = 1; k < 9; ++i)
		{
			for (int k1 = k; k1 < 9; ++i)
			{
				if (cell[k][k1] == true && cell[k][k1 + 1] == true && cell[k + 1][k1] == true && cell[k - 1][k1] == true && cell[k][k - 1] == true)
				{
					++j;
				}
			}
		}
		if (j == 64)
		{
			break;
		}
	}
	if (i % 2 == 1)
	{
		cout << "The winner is " << name2 << "!";
	}
	else
	{
		cout << "The winner is " << name1 << "!";
	}
	while (1);
}
